<div class="container">
	<h1 ng-model="message">{{message}}</h1>
    <h2>Sell Your Product</h2>
  	<hr>
	<div class="row">
      <!-- left column -->
 
      <h3>Item Description</h3>
		<form class="form-horizontal" role="form">
		   <div class="form-group">
		     <label class="col-lg-3 control-label">Item Name</label>
		        <div class="col-lg-8">
		          <input class="form-control" type="text" ng-model="name" required>
		        </div>
		    </div>
		    <div class="form-group">
		      <label class="col-lg-3 control-label" >Description</label>
		      <div class="col-lg-8">
		          <input class="form-control" type="text" ng-model="description" required>
		      </div>
		    </div>
		    <div class="form-group">
		    <label class="col-lg-3 control-label" >Price($)</label>
		    <div class="col-lg-8">
		      <input class="form-control" type="text" ng-model="price" required>
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-md-3 control-label">Quantity</label>
		    <div class="col-md-8">
		      <input class="form-control" type="text" ng-model="quantity" required>
		    </div>
		  </div>
		  <div class="form-group">
		        <label class="col-md-3 control-label"></label>
		      <div class="col-md-8">
		        <button class="btn btn-primary" ng-click="submit(name,description,price,quantity)">New Product</button>
		        <span></span>
		        <button class="btn btn-default" ng-click="bidding(name,description,price,quantity)">Bidding</button>
		    </div>
		  </div>
		</form>          
      </div>
  </div>
  <hr>
</div>
